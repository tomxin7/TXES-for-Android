<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main">


    <TextView
        android:text="提醒标题"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/main_spinner"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="提醒类型"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/main_spinner"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/add_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@android:drawable/edit_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp">
    </EditText>

    <TextView
        android:text="提醒内容"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_above="@+id/add_content" />

    <Button
        android:text="添加提醒"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginBottom="20dp" />

    <TextView
        android:background="#FFFFFF"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:id="@+id/add_time"
        android:textSize="22sp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/add_date"
        android:layout_toEndOf="@+id/add_date" />

    <TextView
        android:background="#FFFFFF"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:id="@+id/add_date"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/add_time"
        android:layout_alignBottom="@+id/add_time"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:text="提醒时间"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:background="#FFFFFF"
        android:ems="10"
        android:layout_marginRight="20dp"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/main_spinner"
        android:layout_alignStart="@+id/main_spinner" />

    <EditText
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/mail_conten"
        android:layout_marginRight="150dp"
        android:textSize="22sp"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/add_date"
        android:layout_alignStart="@+id/add_date"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="提醒邮箱"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/add_time"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/mail_conten"
        android:id="@+id/mail_spinner"
        android:background="#ffffff"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignRight="@+id/add_content"
        android:layout_alignEnd="@+id/add_content"
        android:layout_alignTop="@+id/mail_conten" />


</RelativeLayout>